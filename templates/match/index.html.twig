{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Gestion des Matchs</h1>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        {{ message }}
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Actions disponibles</h5>
            <a href="{{ path('app_match_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Match
            </a>
            <a href="{{ path('app_classement_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voir les Classements
            </a>
        </div>
    </div>
</div>
{% endblock %}

