{% extends 'base.html.twig' %}

{% block title %}Nouveau coach{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Ajouter un coach</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nomPrenom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nomPrenom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_equipe_new') }}" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">Cr√©er</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 